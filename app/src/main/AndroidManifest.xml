<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sl_life_bloodline_app">

        <!-- Emergency Blood Request Activities -->
        <activity
            android:name=".activities.emergency.CreateBloodRequestActivity"
            android:exported="false"
            android:label="Emergency Blood Request" />

        <activity
            android:name=".activities.emergency.NearbyDonorsActivity"
            android:exported="false"
            android:label="Nearby Donors" />

        <activity
            android:name=".activities.emergency.RequestHistoryActivity"
            android:exported="false"
            android:label="Request History" />

        <activity
            android:name=".activities.donor.DonorHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.donor.DonorRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>